<odoo>
    <data>
        <!-- Inherit Form view -->
        <record id="bccr.res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.currency.rate.live.bccr</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="currency_rate_live.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_provider']" position="after">
                    <div attrs="{'invisible': [('currency_provider', '!=', 'bccr')]}" >
                        <div class="row mt16">
                            <label string="Email" for="bccr_email" class="col-lg-3 o_light_label" style="margin-left:15px"/>
                            <field name="bccr_email" style="margin-left:40px"/>
                        </div>
                        <div class="row" attrs="{'invisible': [('currency_provider', '!=', 'bccr')]}">
                            <label string="Token" for="bccr_token" class="col-lg-3 o_light_label" style="margin-left:15px"/>
                            <field name="bccr_token" password="1" style="margin-left:40px"/>
                        </div>  
                    </div>
                </xpath>  
            </field>
        </record>
    </data>
</odoo>
