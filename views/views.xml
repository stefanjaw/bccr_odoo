  <odoo>
  
  <!-- Inherit Form view -->
  <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
    <field name="name">inherit.currency.rate.form.inherit.bccr</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="currency_rate_live.res_config_settings_view_form"/>
    <field name="arch" type="xml">
            <xpath expr="//div[@invisible='not module_currency_rate_live']" position="inside">
                <div class="row mt16">
                    <label string="BCCR Email" for="email_bccr" class="col-lg-3 o_light_label"/>
                    <field name="email_bccr"/>
                </div>
                <div class="row mt16">
                    <label string="BCCR Token" for="token_bccr" class="col-lg-3 o_light_label"/>
                    <field name="token_bccr"/>
                </div>
            </xpath>
    </field>
  </record>
  </odoo>
